  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "dev:api": "tsx src/api/start.ts",
    "dev:all": "sh -c \"pnpm dev:stop; pnpm dev --hostname 127.0.0.1 --port 3000 & pnpm dev:api\"",
